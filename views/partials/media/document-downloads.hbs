    <p>Document download with thumbnail</p>

    <div class="example">

      <!-- document download -->
      <div class="document">
        <div class="document-thumbnail"></div>
        <div class="document-content">
          <p class="document-title"><a href="#">Statement 1 from Linda THOMAS</a></p>
          <div class="document-meta">
            <span class="document-meta-taken">Taken: <time datetime="2016-04-13">13 April 2016</time></span>
            <span class="document-meta-details"><abbr title="Portable Document Format">PDF</abbr>, 715kb, 18 pages</span>
          </div>
        </div>
      </div>
      <!-- end -->

    </div>

